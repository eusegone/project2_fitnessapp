<h1>Listing bookings</h1>

<table>
  <thead>
    <tr>
      <th>Class</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Status</th>
      <th>Instructor</th>
      <th>Client</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.lesson_id %></td>
        <td><%= booking.start_time %></td>
        <td><%= booking.end_time %></td>
        <td><%= booking.status %></td>
        <td><%= booking.instructor_id %></td>
        <td><%= booking.client_id %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_booking_path %>
