<div class="homepage_cover">

  <div id="myCarousel" class="carousel slide" data-ride="carousel">

    <div class="carousel-inner">

      <div class="item active">
        <%= image_tag("outdoor1.jpg", class: "img-responsive") %>
        <div class = "carousel-caption">
          <h2>Fitness App</h2>
          <h4>Find Instructors and classes near you.</h4>
        </div>
      </div>
        
        
        <div class="item">
        <%= image_tag("classadultyoga1.jpg", class: "img-responsive") %>
        <div class = "carousel-caption">
          <h2>Group Classes</h2>
