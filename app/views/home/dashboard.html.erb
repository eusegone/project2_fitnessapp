<div class="dashboard_page_container">
  <% if current_user.role == "instructor" %>
  <section class="upcoming_bookings">
    <h5>Upcoming Bookings</h5>
    <% if !@upcoming_bookings.empty? %>
    <%= render @upcoming_bookings %>
    <% else %>
    <h5>No upcoming bookings.</h5>
    <% end %>
  </section>
  <section class="My_lessons">
    <h5>My Lessons</h5>
    <% current_user.lessons.each do |lesson| %>
    <strong><%= lesson.name %></strong><br> 
    <%= link_to 'delete', lesson_path(lesson), :method => :delete %> <%= link_to 'edit', edit_lesson_path(lesson) %> <br>
    <%= lesson.description %><br>
    <% end %>
    <button class="lesson_button">Add Lesson</button>
    <div id="add_lesson_form">
      <%= render "lesson_form"%>
    </div>
  </section>
  <% end %>
  <section class="upcoming_sessions">
    <h5>Upcoming Sessions</h5>
    <% if !@upcoming_lessons.empty? %>
    <%= render @upcoming_lessons %>
    <% else %>
    <h3>No upcoming lessons.</h3>
    <% end %>
    <h5>Past Sessions</h5>
    <% if !@past_lessons.empty? %>
    <%= render @past_lessons %>
    <% else %>
    <h3>No upcoming lessons.</h3>
    <% end %>
  </section>
</div>














